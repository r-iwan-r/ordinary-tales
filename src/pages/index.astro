---
// 1. 共通CSSと、作った部品をインポートする
import '../styles/global.css';
import Head from '../components/Head.astro';
import Splash from '../components/Splash.astro';
---

<!DOCTYPE html>
<html lang="ja">
<head>
	<Head />
	<title>Ordinary tales | TOP</title>
	<meta name="description" content="Ordinary tales. Music, stories, and simple joys." />
</head>
<body>

	<Splash />

	<main id="Content_Main">
		<section class="hero">
			<h1>Ordinary tales</h1>
			<p>Official Website - Under Construction</p>
		</section>
		
		<nav>
			<p>Coming Soon...</p>
		</nav>
	</main>

	<style>
		/* メインコンテンツ固有の見た目だけここに書く */
		#Content_Main {
			opacity: 0; /* 最初は隠しておく（JSでvisibleクラスをつける） */
			transition: opacity 1.5s ease-in;
			min-height: 100vh;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
		}

		#Content_Main.visible {
			opacity: 1;
		}

		h1 {
			font-size: 3rem;
			margin-bottom: 1rem;
		}
	</style>
</body>
</html>